# EditorConfig is awesome: https://editorconfig.org

# Root project file
root = true

# Default settings for all files
[*]
charset = utf-8               # File encoding
indent_style = space          # Indentation style: "space" or "tab"
indent_size = 4               # Indentation size for spaces or tabs
end_of_line = lf              # Line endings: "lf", "cr", or "crlf"
insert_final_newline = true   # Ensure newline at end of file
trim_trailing_whitespace = true # Remove trailing whitespace on save

# Specific settings for Python files
[*.py]
indent_size = 4               # Use 4 spaces for Python files

# Specific settings for JSON files
[*.json]
indent_size = 2               # Use 2 spaces for JSON files

# Specific settings for Markdown files
[*.md]
trim_trailing_whitespace = false # Keep trailing whitespace for Markdown
max_line_length = off         # Disable line length checks for Markdown

# Specific settings for YAML files
[*.yml]
[*.yaml]
indent_size = 2               # Use 2 spaces for YAML files
